<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loaderTask" type="horse.vinylscratch.conversations.AsyncEmoteLoaderBase" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/emote_list_item_spacing_half"
        android:paddingBottom="@dimen/emote_list_item_spacing_half">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="64dip"
            android:minWidth="64dip"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/label"
            android:layout_width="64dip"
            android:layout_height="18dip"
            android:gravity="center_horizontal"
            android:text=":emote:"
            android:lines="1"
            app:autoSizeMinTextSize="8dip"
            app:autoSizeTextType="uniform"
            />
<!--        <TextView android:id="@+id/counter" android:layout_width="wrap_content" android:layout_height="wrap_content" />-->
    </LinearLayout>
</layout>