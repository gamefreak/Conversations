<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/emote_list_item_spacing_half"
              android:paddingBottom="@dimen/emote_list_item_spacing_half">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="64dip" android:maxWidth="127dip"
        android:minHeight="64dip" android:maxHeight="128dip"
        android:scaleType="matrix"
        android:adjustViewBounds="false"
    />
    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=":emote:"
        />
</LinearLayout>